<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php">
    <!-- Define the test suite -->
    <testsuites>
        <testsuite name="Design Patterns Test Suite">
            <!-- Point to your tests directory -->
            <directory>./tests/DesignPatterns</directory>
        </testsuite>
    </testsuites>

    <!-- Include directories for code coverage (if needed) -->
    <coverage>
        <include>
            <directory suffix=".php">./src</directory> <!-- Adjust to point to your source code -->
        </include>
    </coverage>

    <!-- Logging (coverage reports, etc.) -->
    <logging>
        <log type="coverage-html" target="build/coverage-report" />
    </logging>
</phpunit>
